<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtJudul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="Menjumlahkan 2 Buah Bilangan"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <TextView
        android:id="@+id/txtBil1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtJudul"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="50dp"
        android:text="Masukan Bilangan Pertama"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <EditText
        android:id="@+id/edtBil1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBil1"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <TextView
        android:id="@+id/txtBil2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edtBil1"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:text="Masukan Bilangan Kedua"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline" />

    <EditText
        android:id="@+id/edtBil2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtBil2"
        android:inputType="number"
        android:textAppearance="@style/TextAppearance.AppCompat.Title" />

    <Button
        android:id="@+id/btnhitung"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/edtBil2"
        android:layout_marginHorizontal="90dp"
        android:layout_marginVertical="50dp"
        android:text="Hitung Bilangan" />

    <TextView
        android:id="@+id/txtHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnhitung"
        android:gravity="center"
        android:text="Hasil Penjumlahan"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <EditText
        android:id="@+id/edtHasil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtHasil"
        android:layout_marginHorizontal="90dp"
        android:gravity="center"
        android:textSize="50sp" />

</RelativeLayout>